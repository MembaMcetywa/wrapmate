{
  "name": "wrapmate",
  "displayName": "WrapMate",
  "description": "Quickly wrap selected HTML text with custom tags - features live preview as you type!",
  "version": "1.0.0",
  "publisher": "MembaMcetywa",
  "repository": {
    "type": "git",
    "url": "https://github.com/MembaMcetywa/wrapmate"
  },
  "bugs": {
    "url": "https://github.com/MembaMcetywa/wrapmate/issues"
  },
  "homepage": "https://github.com/MembaMcetywa/wrapmate#readme",
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "keywords": [
    "html",
    "wrap",
    "tags",
    "productivity",
    "web development"
  ],
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Formatters",
    "Other"
  ],
  "activationEvents": [ 
   "onLanguage:html"  
],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.wrapWithElement",
        "title": "Wrap with Element"
      },
      {      
        "command": "extension.wrapmate",
        "title": "wrapmate"}
    ],
    "keybindings": [
      {
        "command": "extension.wrapmate",
        "key": "ctrl+shift+w",
        "mac": "cmd+shift+w",
        "when": "editorTextFocus && editorLangId == html"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.93.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "eslint": "^9.9.1",
    "esbuild": "^0.23.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.5.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
